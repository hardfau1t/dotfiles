(defwidget sep []
  (box 
    :valign "center"
    (label :class "separator" :text "î˜¡")
  )
)

(defwidget left []
  (box :orientation "h"
    :spacing 15
    :halign "start"
    :class "left"
    :space-evenly false
    (workspaces)
    (sep)
    (mpd)
  )
)


(defwidget center []
    (box :orientation "h" 
         :halign "center"
         :class "center"
      (date)
  )
)
(defwidget right []
  (box
    :orientation "h"
    :space-evenly false
    :spacing 8
    :halign "end"
    :class "right"
    (keyboard)
    (sep)
    (dunst)
    (sep)
    (bluetooth)
    (ip_con)
    (sep)
    (bright)
    (sep)
    (audio_sink)
    (sep)
    (audio_source)
    (sep)
    (bat)
    (sep)
    (mem)
    (sep)
    (cpu)
    (sys_tray)

  )
)

(defwidget bar []
  (centerbox :class "bar_class"
       :orientation "h"
        :hexpand true
    (left)
    (center)
    (right)
  )
)

(defwindow bar
          :geometry (geometry
                       :y "0.5%"
                       :width "99%"
                       :height "25px"
                       :anchor "top center")
  :monitor 0
  :exclusive true
  :focusable false
  (bar)
)

